{
  "manifest_version": 3,
  "icons": {
    "16": "icons/red/16.png",
    "32": "icons/red/32.png",
    "128": "icons/red/128.png"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "src/options.html"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
    },
    "openProfile1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "MacCtrl+Shift+1"
      },
      "description": "Open Profile #1"
    },
    "openProfile2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "MacCtrl+Shift+2"
      },
      "description": "Open Profile #2"
    },
    "openProfile3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "MacCtrl+Shift+3"
      },
      "description": "Open Profile #3"
    }
  },
  "{{safari}}.background": {
    "service_worker": "src/entry/background.ts",
    "type": "module"
  },
  "{{chrome}}.background": {
    "service_worker": "src/entry/background.ts",
    "type": "module"
  },
  "{{firefox}}.background": {
    "scripts": [
      "src/entry/background.ts"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.awsapps.com/start*"
      ],
      "js": [
        "src/entry/aws-sso.ts"
      ]
    },
    {
      "matches": [
        "https://*.console.aws.amazon.com/*"
      ],
      "js": [
        "src/entry/aws-console.ts"
      ]
    },
    {
      "matches": [
        "https://signin.aws.amazon.com/switchrole?*"
      ],
      "js": [
        "src/entry/aws-switchrole.ts"
      ]
    },
    {
      "matches": [
        "https://signin.aws.amazon.com/saml",
        "https://*.signin.aws.amazon.com/saml"
      ],
      "js": [
        "src/entry/aws-saml.ts"
      ]
    }
  ],
  "{{chrome}}.content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; worker-src 'none'; img-src 'self' data: https://static.global.sso.amazonaws.com/"
  },
  "{{firefox}}.content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; worker-src 'none'; img-src 'self' data: https://static.global.sso.amazonaws.com/"
  },
  "{{chrome}}.cross_origin_opener_policy": {
    "value": "same-origin"
  },
  "{{safari}}.permissions": [
    "storage"
  ],
  "{{chrome}}.permissions": [
    "storage"
  ],
  "{{firefox}}.permissions": [
    "contextualIdentities",
    "cookies",
    "storage"
  ],
  "{{chrome}}.optional_permissions": [
    "history"
  ],
  "{{firefox}}.optional_permissions": [
    "activeTab",
    "history",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse",
    "https://*.amazonaws.com/federation/console?*",
    "https://*.amazonaws-us-gov.com/federation/console?*",
    "https://*.amazonaws.cn/federation/console?*"
  ],
  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "{21906314-1856-4536-9f12-471921a8abb8}",
      "strict_min_version": "109.0"
    }
  }
}